<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/labelTabName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:text="Trade"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
    <Button
        android:id="@+id/solarSystemMapButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="S"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/planetMapButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="P"
        android:layout_toLeftOf="@id/solarSystemMapButton"/>

    <Button
        android:id="@+id/tradeableButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="T"
        android:layout_toLeftOf="@id/planetMapButton"
        android:onClick="tradeableClick"/>

    <Button
        android:id="@+id/shipYardButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="Y"
        android:layout_toLeftOf="@id/tradeableButton"/>

    <Button
        android:id="@+id/systemInfoButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toLeftOf="@id/shipYardButton"
        android:text="I"
        android:onClick="systemInfoClick"/>

    <View
        android:layout_below="@id/systemInfoButton"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>
