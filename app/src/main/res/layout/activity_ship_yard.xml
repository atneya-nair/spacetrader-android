<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ShipYardActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="30dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include android:id="@+id/infoTabButtons"
            layout="@layout/tab_row"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelFuelDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have fuel to fly X parsecs"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelFuelCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A full tank costs X credits"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/refuelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="refuelClick"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Refuel"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelHullStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your hull strength is at X%"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelRepairCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full repair will cost X credits"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/repairButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="repairClick"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Repair"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelNewShips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are new ships for sale"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buyShipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Buy New Ship"
            />
    </LinearLayout>
</LinearLayout>