<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_system_info"
    tools:context=".Views.SystemInfoActivity"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include android:id="@+id/infoTabButtons"
            layout="@layout/tab_row"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelSystemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:text="Solar System Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/systemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAR"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelPlanetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:text="Planet Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/planetNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JARP"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelTechLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:text="Tech Level:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/techLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDK"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelPolitics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:text="Politics:"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/politicsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDK"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    </LinearLayout>
    <TextView
        android:id="@+id/specialEventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:text="This system is currently under X!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@id/labelTechLevel"
        />


</LinearLayout>