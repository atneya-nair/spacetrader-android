<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.gatech.cs2340.spacetraderredux"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:name=".ui.common.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.mappane.MapActivity" />
        <activity android:name=".ui.tradepane.TradeActivity" />
        <activity android:name=".ui.configuration.ConfigurationActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.cargopane.CargoActivity" />
        <activity android:name=".ui.systempane.SystemInfoActivity" />

        <activity
            android:name=".ui.tradepane.TradeSpecification"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Dialog" />

    </application>

</manifest>